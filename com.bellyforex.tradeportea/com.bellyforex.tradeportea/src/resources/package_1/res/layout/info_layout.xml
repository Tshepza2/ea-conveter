<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/icon"
             android:layout_width="60.0dp"
             android:layout_height="60.0dp"
             android:layout_marginTop="50.0dp"
             android:src="@mipmap/ic_launcher_foreground" />
  <TextView android:textSize="16.0sp"
            android:textColor="@color/blue_dark"
            android:id="@id/note_text"
            android:background="@drawable/layoutback"
            android:padding="5.0dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dp"
            android:text="hello there"
            android:layout_marginStart="5.0dp"
            android:layout_toEndOf="@id/icon" />
  <RelativeLayout android:id="@id/autotrade"
                  android:background="@color/black"
                  android:padding="5.0dp"
                  android:visibility="gone"
                  android:layout_width="2000.0dp"
                  android:layout_height="2000.0dp"
                  android:layout_centerInParent="true">
    <TextView android:textSize="25.0dp"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:id="@id/appname"
              android:background="@color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/app_name" />
    <androidx.core.widget.NestedScrollView android:id="@id/sv"
                          android:descendantFocusability="blocksDescendants"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_above="@id/force_stop">
      <TextView android:textSize="14.0sp"
                android:textColor="@color/white"
                android:id="@id/log_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dp"
                android:layout_marginBottom="40.0dp"
                android:layout_below="@id/appname" />
    </androidx.core.widget.NestedScrollView>
    <Button android:textColor="@color/white"
            android:id="@id/force_stop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dp"
            android:text="FORCE STOP TRADING"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/blue_dark" />
  </RelativeLayout>
</RelativeLayout>