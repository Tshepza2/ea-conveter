<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <androidx.cardview.widget.CardView android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="@color/red"
                        tradeportea:cardCornerRadius="24.0dp"
                        tradeportea:cardUseCompatPadding="true">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10.0dp">
      <androidx.cardview.widget.CardView android:layout_width="55.0dp"
                            android:layout_height="55.0dp"
                            android:backgroundTint="@color/white_with_transparency"
                            tradeportea:cardCornerRadius="200.0dp">
        <ImageView android:id="@id/logo_img"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:src="@drawable/ic_baseline_arrow_circle_right_24" />
      </androidx.cardview.widget.CardView>
      <LinearLayout android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dp">
        <TextView android:textSize="23.0sp"
                  android:textStyle="bold"
                  android:textColor="@color/white_with_transparency"
                  android:id="@id/bot_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Profit Journey PV1.0" />
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</RelativeLayout>