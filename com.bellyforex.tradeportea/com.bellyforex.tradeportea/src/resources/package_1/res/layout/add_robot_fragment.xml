<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@drawable/gradient_background"
                android:padding="20.0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <ImageButton android:id="@id/backbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_arrow_back_24"
               android:backgroundTint="@android:color/transparent" />
  <TextView android:textSize="22.0dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@id/top_text"
            android:padding="5.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp"
            android:text="License Key"
            android:textAlignment="center"
            tradeportea:elevation="5.0dp" />
  <TextView android:textSize="14.0dp"
            android:textColor="@color/black"
            android:id="@id/note_text"
            android:padding="6.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dp"
            android:text="@string/note_text"
            android:layout_below="@id/top_text"
            android:textAlignment="center" />
  <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20.0dp"
                        android:hint="Enter the key here"
                        android:layout_below="@id/note_text"
                        style="@style/TransparentTextInputStyle">
    <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black"
                          android:id="@id/outlined_edit_text"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>
  <androidx.appcompat.widget.AppCompatButton android:textSize="16.0dp"
                        android:textColor="@color/red"
                        android:id="@id/submit"
                        android:background="@drawable/back"
                        android:layout_width="fill_parent"
                        android:layout_height="65.0dp"
                        android:layout_marginTop="18.0dp"
                        android:layout_marginBottom="8.0dp"
                        android:text="Authenticate"
                        android:layout_below="@id/outlined_text_input_layout"
                        android:textAllCaps="false"
                        android:layout_marginStart="8.0dp"
                        android:layout_marginEnd="8.0dp" />
</RelativeLayout>