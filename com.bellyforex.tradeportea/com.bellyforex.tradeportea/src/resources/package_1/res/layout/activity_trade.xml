<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <WebView android:id="@id/webView"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent" />
  <RelativeLayout android:id="@id/autotrade"
                  android:background="@color/black"
                  android:padding="5.0dp"
                  android:visibility="visible"
                  android:layout_width="2000.0dp"
                  android:layout_height="2000.0dp"
                  android:layout_centerInParent="true">
    <androidx.cardview.widget.CardView android:id="@id/cardview"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_alignParentTop="true"
                          tradeportea:cardCornerRadius="20.0dp">
      <TextView android:textSize="50.0dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center"
                android:id="@id/appname"
                android:background="?attr/colorPrimary"
                android:padding="5.0dp"
                android:layout_width="fill_parent"
                android:layout_height="224.0dp"
                android:foreground="@android:color/transparent"
                android:text="Trade Circuit EA" />
    </androidx.cardview.widget.CardView>
    <ImageView android:id="@id/centered_icon"
               android:layout_width="307.0dp"
               android:layout_height="146.0dp"
               android:src="@drawable/ic_baseline_blur_on_29"
               android:layout_centerInParent="true" />
  </RelativeLayout>
  <androidx.core.widget.NestedScrollView android:id="@id/sv"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/force_stop"
                        android:layout_centerHorizontal="true">
    <TextView android:textSize="20.0sp"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:id="@id/log_message"
              android:background="@android:color/transparent"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="55.0dp"
              android:layout_marginBottom="40.0dp"
              android:text=""
              android:layout_centerHorizontal="true" />
  </androidx.core.widget.NestedScrollView>
  <Button android:textColor="@color/white"
          android:id="@id/force_stop"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10.0dp"
          android:text="RE AUTO TRADE"
          android:layout_alignParentBottom="true"
          android:backgroundTint="@color/red" />
</RelativeLayout>