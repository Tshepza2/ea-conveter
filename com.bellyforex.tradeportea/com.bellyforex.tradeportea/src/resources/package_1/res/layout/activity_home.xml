<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@id/container"
                      android:background="@drawable/gradient_background"
                      android:padding="0.0dp"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <ProgressBar android:id="@id/mainProgress"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:indeterminateTint="@color/white" />
  <RelativeLayout android:id="@id/error_code"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="0.0dp"
                  tradeportea:layout_constraintLeft_toLeftOf="parent"
                  tradeportea:layout_constraintRight_toRightOf="parent"
                  tradeportea:layout_constraintTop_toTopOf="parent">
    <TextView android:textSize="20.0dp"
              android:textColor="@color/white"
              android:id="@id/eee_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Internet connection is slow please connect to a good network... "
              android:layout_centerHorizontal="true"
              android:textAlignment="center" />
    <Button android:textColor="@color/black"
            android:id="@id/reload_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reload"
            android:layout_below="@id/eee_txt"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/white" />
  </RelativeLayout>
  <com.google.android.material.bottomnavigation.BottomNavigationView android:id="@id/nav_view"
                        android:background="@android:color/transparent"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0.0dp"
                        android:layout_marginEnd="0.0dp"
                        tradeportea:itemIconTint="@color/white"
                        tradeportea:itemTextAppearanceActive="@style/BottomNavigationViewTextStyle"
                        tradeportea:itemTextAppearanceInactive="@style/BottomNavigationViewTextStyle"
                        tradeportea:itemTextColor="@color/white"
                        tradeportea:layout_constraintBottom_toBottomOf="parent"
                        tradeportea:layout_constraintLeft_toLeftOf="parent"
                        tradeportea:layout_constraintRight_toRightOf="parent"
                        tradeportea:menu="@menu/bottom_nav_menu" />
  <RelativeLayout android:id="@id/main_view"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  tradeportea:layout_constraintBottom_toTopOf="@id/nav_view">
    <fragment android:name="androidx.navigation.fragment.NavHostFragment"
              android:id="@id/nav_host_fragment_activity_home"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tradeportea:defaultNavHost="true"
              tradeportea:layout_constraintLeft_toLeftOf="parent"
              tradeportea:layout_constraintRight_toRightOf="parent"
              tradeportea:layout_constraintTop_toTopOf="parent"
              tradeportea:navGraph="@navigation/mobile_navigation" />
  </RelativeLayout>
  <RelativeLayout android:id="@id/payLayout"
                  android:background="@color/white"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
      <ImageView android:id="@id/logo_img"
                 android:layout_width="120.0dp"
                 android:layout_height="150.0dp"
                 android:src="@mipmap/ic_launcher"
                 android:layout_centerHorizontal="true" />
      <TextView android:textSize="24.0sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dp"
                android:layout_marginBottom="24.0dp"
                android:text="Login" />
      <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout_2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dp"
                            android:hint="Mentor ID"
                            android:layout_below="@id/outlined_text_input_layout_2"
                            style="@style/TransparentTextInputStyle">
        <com.google.android.material.textfield.TextInputEditText android:id="@id/outlined_edit_text_2"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:maxLines="1"
                              android:inputType="number" />
      </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout_3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dp"
                            android:hint="Email"
                            android:layout_below="@id/outlined_text_input_layout_2"
                            style="@style/TransparentTextInputStyle">
        <com.google.android.material.textfield.TextInputEditText android:id="@id/outlined_edit_text_3"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:maxLines="1"
                              android:inputType="text" />
      </com.google.android.material.textfield.TextInputLayout>
      <androidx.appcompat.widget.AppCompatButton android:textSize="16.0dp"
                            android:textColor="@color/white"
                            android:id="@id/subscribe"
                            android:layout_width="fill_parent"
                            android:layout_height="65.0dp"
                            android:layout_margin="8.0dp"
                            android:text="Proceed"
                            android:layout_below="@id/outlined_text_input_layout_3"
                            android:textAllCaps="false"
                            android:backgroundTint="@color/blue_light" />
    </LinearLayout>
    <ProgressBar android:id="@id/progress"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:indeterminateTint="?attr/colorPrimary" />
  </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>