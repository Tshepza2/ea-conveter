<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@drawable/gradient_background"
                android:padding="20.0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <ImageButton android:id="@id/backbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_arrow_back_24"
               android:backgroundTint="@android:color/transparent" />
  <ImageButton android:id="@id/delete_symbol"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_delete_forever_24"
               android:layout_alignParentEnd="true"
               android:backgroundTint="@android:color/transparent" />
  <TextView android:textSize="22.0dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@id/top_text"
            android:padding="5.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp"
            android:text="Step Index"
            android:fontFamily="@font/cyberfunk"
            android:textAlignment="center"
            tradeportea:elevation="5.0dp" />
  <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dp"
                        android:hint="Lot Size"
                        android:layout_below="@id/top_text"
                        style="@style/TransparentTextInputStyle">
    <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black"
                          android:id="@id/outlined_edit_text"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:inputType="numberDecimal"
                          android:fontFamily="@font/cyberfunk" />
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dp"
                        android:hint="Action. Eg: BUY, SELL or BOTH"
                        android:layout_below="@id/outlined_text_input_layout"
                        style="@style/TransparentTextInputStyle">
    <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black"
                          android:id="@id/outlined_edit_text_2"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:inputType="text"
                          android:fontFamily="@font/cyberfunk" />
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dp"
                        android:hint="Platform: MT5 / MT4"
                        android:layout_below="@id/outlined_text_input_layout_2"
                        style="@style/TransparentTextInputStyle">
    <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black"
                          android:id="@id/outlined_edit_text_3"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:inputType="text"
                          android:fontFamily="@font/cyberfunk" />
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout android:id="@id/outlined_text_input_layout_4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dp"
                        android:hint="Number Of Trades Eg: 10"
                        android:layout_below="@id/outlined_text_input_layout_3"
                        style="@style/TransparentTextInputStyle">
    <com.google.android.material.textfield.TextInputEditText android:textColor="@color/black"
                          android:id="@id/outlined_edit_text_4"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:inputType="text"
                          android:fontFamily="@font/cyberfunk" />
  </com.google.android.material.textfield.TextInputLayout>
  <androidx.appcompat.widget.AppCompatButton android:textSize="16.0dp"
                        android:textColor="@color/black"
                        android:id="@id/submit"
                        android:layout_width="fill_parent"
                        android:layout_height="65.0dp"
                        android:layout_marginTop="8.0dp"
                        android:layout_marginBottom="8.0dp"
                        android:text="Save"
                        android:layout_below="@id/outlined_text_input_layout_4"
                        android:textAllCaps="false"
                        android:fontFamily="@font/cyberfunk"
                        android:layout_marginStart="8.0dp"
                        android:layout_marginEnd="8.0dp"
                        android:backgroundTint="@color/red" />
</RelativeLayout>