<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <RelativeLayout android:id="@id/selected_bot_header"
                  android:padding="0.0dp"
                  android:visibility="visible"
                  android:layout_width="wrap_content"
                  android:layout_height="600.0dp">
    <ImageView android:id="@id/logo_img"
               android:visibility="visible"
               android:layout_width="fill_parent"
               android:layout_height="550.0dp"
               android:foreground="@drawable/gradient_background_image"
               android:src="@drawable/ic_baseline_arrow_circle_right_24"
               android:scaleType="fitXY"
               android:translationZ="-5.0dp"
               android:backgroundTint="@android:color/transparent" />
    <LinearLayout android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="450.0dp">
      <TextView android:textSize="35.0sp"
                android:textStyle="bold"
                android:textColor="@color/white_with_transparency"
                android:id="@id/bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed Max LETHAL 2"
                android:textAlignment="center" />
      <TextView android:textSize="0.0sp"
                android:textStyle="bold"
                android:textColor="@color/white_with_transparency"
                android:id="@id/owner_name"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:text="Fundamental Pip Lord" />
    </LinearLayout>
    <TextView android:textSize="16.0sp"
              android:textStyle="italic"
              android:textColor="#970000"
              android:layout_gravity="center_horizontal"
              android:id="@id/note"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="~ Fundamental Pip Lord" />
    <ImageButton android:id="@id/bot_info"
                 android:background="@android:color/transparent"
                 android:visibility="visible"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_baseline_info_24"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentEnd="true" />
    <androidx.cardview.widget.CardView android:id="@id/controls"
                          android:layout_width="390.0dp"
                          android:layout_height="100.0dp"
                          android:layout_marginTop="490.0dp"
                          android:layout_centerHorizontal="true"
                          android:backgroundTint="@color/red"
                          tradeportea:cardCornerRadius="25.0sp"
                          tradeportea:cardElevation="8.0dp"
                          tradeportea:cardUseCompatPadding="true">
      <LinearLayout android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="337.0dp"
                    android:layout_height="95.0dp"
                    android:weightSum="4.0">
        <LinearLayout android:orientation="vertical"
                      android:id="@id/stopButton"
                      android:padding="1.0dp"
                      android:visibility="gone"
                      android:clickable="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:foreground="?attr/selectableItemBackground"
                      android:layout_weight="1.0"
                      android:textAlignment="center"
                      android:layout_marginStart="10.0dp">
          <ImageView android:layout_gravity="center"
                     android:padding="1.0dp"
                     android:layout_width="30.0dp"
                     android:layout_height="30.0dp"
                     android:src="@drawable/ic_baseline_stop_circle_24" />
          <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    android:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
                      android:id="@id/startButton"
                      android:padding="1.0dp"
                      android:visibility="gone"
                      android:clickable="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:foreground="?attr/selectableItemBackground"
                      android:layout_weight="1.0"
                      android:textAlignment="center"
                      android:layout_marginStart="10.0dp">
          <ImageView android:layout_gravity="center"
                     android:padding="1.0dp"
                     android:layout_width="30.0dp"
                     android:layout_height="30.0dp"
                     android:src="@drawable/ic_baseline_play_arrow_24" />
          <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade"
                    android:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
                      android:id="@id/gotoasset"
                      android:padding="1.0dp"
                      android:clickable="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:foreground="?attr/selectableItemBackground"
                      android:layout_weight="1.0"
                      android:textAlignment="center"
                      android:layout_marginStart="30.0dp">
          <ImageView android:layout_gravity="center"
                     android:padding="1.0dp"
                     android:layout_width="30.0dp"
                     android:layout_height="30.0dp"
                     android:src="@drawable/ic_baseline_auto_graph_24" />
          <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotes"
                    android:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
                      android:id="@id/delete_ea"
                      android:padding="1.0dp"
                      android:clickable="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:foreground="?attr/selectableItemBackground"
                      android:layout_weight="1.0"
                      android:textAlignment="center"
                      android:layout_marginStart="30.0dp"
                      android:layout_marginEnd="10.0dp">
          <ImageView android:layout_gravity="center"
                     android:padding="1.0dp"
                     android:layout_width="30.0dp"
                     android:layout_height="30.0dp"
                     android:src="@drawable/ic_baseline_delete_forever_24" />
          <TextView android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:textAllCaps="true" />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </RelativeLayout>
  <RelativeLayout android:id="@id/bots_list"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="20.0dp"
                  android:layout_below="@id/selected_bot_header">
    <androidx.core.widget.NestedScrollView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="40.0dp">
      <RelativeLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
        <TextView android:textSize="12.0dp"
                  android:textStyle="bold"
                  android:textColor="@color/white"
                  android:id="@id/label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10.0dp"
                  android:layout_marginBottom="10.0dp"
                  android:text="CONNECTED ROBOTS"
                  android:layout_marginStart="10.0dp"
                  android:layout_marginEnd="10.0dp" />
        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical"
                              android:id="@id/bots_list_recycler_view"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="-4.0dp"
                              android:layout_below="@id/label"
                              tradeportea:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        <androidx.cardview.widget.CardView android:id="@id/add_bot_btn"
                              android:clickable="true"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10.0dp"
                              android:foreground="?attr/selectableItemBackground"
                              android:layout_below="@id/bots_list_recycler_view"
                              android:backgroundTint="@color/red"
                              tradeportea:cardCornerRadius="24.0dp"
                              tradeportea:cardUseCompatPadding="true">
          <LinearLayout android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="338.0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1.0dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_round_add_circle_24" />
            <TextView android:textSize="26.0sp"
                      android:textStyle="bold"
                      android:textColor="@color/white_with_transparency"
                      android:gravity="center_horizontal"
                      android:layout_gravity="center_vertical"
                      android:layout_width="223.0dp"
                      android:layout_height="wrap_content"
                      android:text="@string/add_a_new_ea" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>
      </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
  </RelativeLayout>
</RelativeLayout>