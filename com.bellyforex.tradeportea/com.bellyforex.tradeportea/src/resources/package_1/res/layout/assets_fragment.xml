<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <ImageButton android:id="@id/backbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20.0dp"
               android:src="@drawable/ic_baseline_arrow_back_241"
               android:layout_marginStart="20.0dp"
               android:backgroundTint="@color/blue_dark" />
  <TextView android:textSize="18.0dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dp"
            android:layout_toRightOf="@id/backbtn"
            android:textAlignment="center" />
  <com.google.android.material.tabs.TabLayout android:id="@id/tab_layout"
                        android:background="?attr/colorPrimary"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/backbtn"
                        tradeportea:tabIndicatorColor="?attr/textColor"
                        tradeportea:tabSelectedTextColor="?attr/textColor"
                        tradeportea:tabTextAppearance="@style/TextAppearance.AppCompat.Body2"
                        tradeportea:tabTextColor="@color/red">
    <com.google.android.material.tabs.TabItem android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Allowed Symbols" />
    <com.google.android.material.tabs.TabItem android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="All Symbols" />
  </com.google.android.material.tabs.TabLayout>
  <androidx.viewpager.widget.ViewPager android:id="@id/view_pager"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tab_layout" />
  <TextView android:textSize="25.0sp"
            android:gravity="center"
            android:id="@id/no_account"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Symbol Found!!"
            android:layout_centerInParent="true" />
</RelativeLayout>