<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@color/black"
                android:padding="20.0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <TextView android:textSize="16.0dp"
            android:textColor="@color/red"
            android:gravity="center"
            android:id="@id/note"
            android:layout_width="391.0dp"
            android:layout_height="wrap_content"
            android:text="These are Symbols you have selected for your EA to trade." />
  <androidx.recyclerview.widget.RecyclerView android:orientation="vertical"
                        android:id="@id/symbols_recyclerView"
                        android:scrollbars="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dp"
                        android:layout_marginBottom="40.0dp"
                        android:layout_below="@id/note"
                        tradeportea:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tradeportea:spanCount="2" />
  <TextView android:textSize="20.0dp"
            android:textColor="@color/blue_dark"
            android:gravity="center"
            android:id="@id/emptytext"
            android:background="@color/white"
            android:padding="10.0dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to All Symbols and add the once you want to trade."
            android:layout_centerInParent="true" />
</RelativeLayout>