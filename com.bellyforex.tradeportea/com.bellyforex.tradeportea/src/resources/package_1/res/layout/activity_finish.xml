<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@color/black"
                android:padding="20.0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <RelativeLayout android:id="@id/loading"
                  android:visibility="visible"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
    <TextView android:textSize="16.0dp"
              android:textColor="@color/black"
              android:id="@id/textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="50.0dp"
              android:text="Automated Trading Done."
              android:layout_centerHorizontal="true" />
    <TextView android:textSize="28.0dp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Resuming In."
              android:layout_below="@id/textView"
              android:layout_centerInParent="true"
              android:textAlignment="center" />
    <RelativeLayout android:id="@id/wheels"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2">
      <ProgressBar android:id="@id/time_progressBar"
                   android:layout_width="fill_parent"
                   android:layout_height="200.0dp"
                   android:indeterminateOnly="false"
                   android:progressDrawable="@drawable/time_circle" />
      <LinearLayout android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/tm_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
        <TextView android:textColor="?attr/textColor"
                  android:id="@id/time_line_1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Seconds"
                  android:layout_centerInParent="true" />
        <TextView android:textSize="60.0dp"
                  android:textStyle="bold"
                  android:textColor="?attr/textColor"
                  android:id="@id/time_line_2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="60"
                  android:layout_centerInParent="true" />
      </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:background="@color/black"
                    android:padding="5.0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="500.0dp"
                    android:layout_below="@id/wheels">
      <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25.0dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@id/appname"
                android:background="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRADE CIRCUIT EA"
                android:textAlignment="center"
                android:paddingStart="80.0dp" />
      <androidx.core.widget.NestedScrollView android:id="@id/sv"
                            android:descendantFocusability="blocksDescendants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/copy_btn"
                            android:paddingStart="80.0dp">
        <TextView android:textSize="14.0sp"
                  android:textColor="@color/red"
                  android:id="@id/log_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20.0dp"
                  android:layout_marginBottom="40.0dp"
                  android:layout_below="@id/appname" />
      </androidx.core.widget.NestedScrollView>
      <Button android:textColor="@color/black"
              android:id="@id/copy_btn"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10.0dp"
              android:text="COPY LOG TEXT"
              android:layout_alignParentBottom="true"
              android:backgroundTint="@color/white" />
    </RelativeLayout>
  </RelativeLayout>
  <RelativeLayout android:id="@id/update"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
    <TextView android:textSize="28.0dp"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:id="@id/textView22"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="100.0dp"
              android:text="It is Time to update The App."
              android:layout_centerHorizontal="true"
              android:textAlignment="center" />
    <Button android:textColor="@color/blue_dark"
            android:id="@id/updatebutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_below="@id/textView22"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/white" />
  </RelativeLayout>
</RelativeLayout>