<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tradeportea="http://schemas.android.com/apk/res-auto">
  <androidx.cardview.widget.CardView android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="@color/red"
                        tradeportea:cardCornerRadius="8.0dp"
                        tradeportea:cardUseCompatPadding="true">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10.0dp">
      <ImageView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_baseline_arrow_circle_right_24" />
      <LinearLayout android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dp">
        <TextView android:textSize="16.0dp"
                  android:textStyle="bold"
                  android:textColor="?attr/textColorMuted"
                  android:id="@id/symbolname"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Step Index" />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
          <TextView android:textSize="14.0dp"
                    android:textColor="?attr/textColorMuted"
                    android:id="@id/lot_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lot Size : 0.01" />
          <TextView android:textSize="14.0dp"
                    android:textColor="?attr/textColorMuted"
                    android:id="@id/actxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action : BOTH"
                    android:layout_marginStart="20.0dp" />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</RelativeLayout>